# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to git!

# WaafiPay Production (Real EvcPlus Payments)
# Get credentials from: https://waafipay.net
WAAFIPAY_MERCHANT_ID=your_merchant_id_here
WAAFIPAY_API_USER_ID=your_api_user_id_here
WAAFIPAY_API_KEY=your_api_key_here
WAAFIPAY_API_URL=https://api.waafipay.net

# Binance Testnet (Test USDT - No Real Money)
# Get testnet credentials from: https://testnet.binance.vision
BINANCE_API_KEY=your_binance_testnet_api_key_here
BINANCE_API_SECRET=your_binance_testnet_secret_here
BINANCE_API_URL=https://testnet.binance.vision

# For production Binance (Real USDT):
# BINANCE_API_KEY=your_binance_production_api_key
# BINANCE_API_SECRET=your_binance_production_secret
# BINANCE_API_URL=https://api.binance.com

# Mode configuration
USE_PRODUCTION_WAAFIPAY=true
USE_PRODUCTION_BINANCE=false
